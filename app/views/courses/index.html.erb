<h1>
  Course Listing
</h1>
<% if current_user.try(:admin?) %>
  <%= link_to " New Course", new_course_path, class: 'btn btn-default fa fa-plus-circle'%>
<% end %>
<%= link_to " Inbox", "http://www.outlook.com/knights.ucf.edu", class: 'btn btn-default fa fa-envelope-o'%>
<%= link_to " Calendar", root_path, class: 'btn btn-default fa fa-calendar-o'%>
<table>
  <body>
    <% @courses.each do |course| %>
      <div class="jumbotron">
        <p><%= course.name %></p>
        <p><%= course.description %></p>
        <p><%= course.start_date.to_s(:long) %> - <%= course.end_date.to_s(:long) %></p>
        <p>
          <% if course.mon %><%= "Mon" %><% end %>
          <% if course.tue %><%= "Tue" %><% end %>
          <%= " & " %>
          <% if course.wed %><%= "Wed" %><% end %>
          <% if course.thu %><%= "Thu" %><% end %>
          <%= course.session_time.strftime("%I:%M %p") %> - <%= course.session_time_out.strftime("%I:%M %p")%>
        </p>
        <p><% if course.try(:instructor) %><%= course.instructor.first_name +" "+ course.instructor.last_name%><% end %></p>
        <% if current_user.try(:admin?) %>
          <b><%= link_to ' Test', course, class: 'btn btn-primary fa fa-check-circle' %></b>
          <b><%= link_to ' Edit', edit_course_path(course), class: 'btn btn-warning fa fa-pencil-square-o' %></b>
          <b><%= link_to ' Delete', course, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger fa fa-times-circle' %></b>
        <% elsif current_user.try(:instructor?) %>
          <b><%= link_to ' Teach', course, class: 'btn btn-primary fa fa-university' %></b>
        <% else %>
          <b><%= link_to ' Learn', course, class: 'btn btn-primary fa fa-leanpub' %></b>
        <% end %>
      </div>
    <% end %>
  </body>
</table>
