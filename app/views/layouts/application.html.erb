<!DOCTYPE html>
<html>
<head>
  <title>UCF Classroom</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>
  <div class="navbar navbar-inverse navbar-fixed-top">
    <div class="navbar-inner">
      <div class="container">
        <div class="navbar-header">
          <div class="navbar-toggle collapsed" data-toggle="collapse" data-target="#js-navbar-collapse">
            <span class="sr-only">Toggle navigation</span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
          </div>
          <span><%= link_to 'UCF Classroom', root_path, class:"navbar-brand" %></span>
        </div>
        <div class="collapse navbar-collapse" id="js-navbar-collapse">
          <% if user_signed_in? %>
            <ul class="nav navbar-nav navbar-right">
              <li class="dropdown">
                <a href="#" class="dropdown-toggle" data-toggle="dropdown">Account<b class="caret"></b></a>
                <ul class="dropdown-menu">
                  <% Course.all.each do |course| %>
                    <li><%= link_to course.name, course %></li>
                  <% end %>
                  <li class="divider"></li>
                  <li><%= link_to 'Settings', edit_user_registration_path %></li>
                  <li class="divider"></li>
                  <li><%= link_to 'Log Out', destroy_user_session_path, method: :delete %></li>
                </ul>
              </li>
            </ul>
          <% else %>
            <ul class="nav navbar-nav pull-right">
              <li><%= link_to 'Log in', new_user_session_path %></li>
              <li><%= link_to 'Sign up', new_user_registration_path %></li>
            </ul>
          <%end%>
        </div>
      </div>
    </div>
  </div>
<div class="container">
  <%= yield %>
</div>

</body>
</html>
