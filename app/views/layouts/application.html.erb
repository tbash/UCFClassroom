<!DOCTYPE html>
<html>
<head>
  <title>UCF Classroom</title>
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>
  <div class="navbar navbar-inverse navbar-fixed-top">
    <div class="navbar-inner">
      <div class="container">
        <span><%= link_to 'UCF Classroom', root_path, class:"navbar-brand navbar-left" %></span>
        <% if user_signed_in? %>
          <ul class="nav navbar-nav navbar-right" style="float:right">
            <li class="dropdown">
              <a href="#" class="dropdown-toggle" data-toggle="dropdown">Account<b class="caret"></b></a>
              <ul class="dropdown-menu">
                <% Course.all.each do |course| %>
                  <li><%= link_to course.try(:name), course %></li>
                <% end %>
                <li class="divider"></li>
                <li><%= link_to 'User Settings', edit_user_registration_path %></li>
                <li class="divider"></li>
                <li><%= link_to 'Log Out', destroy_user_session_path, method: :delete %></li>
              </ul>
            </li>
          </ul>
        <% else %>
          <ul class="nav navbar-nav navbar-right" style="float:right">
            <li class="dropdown">
              <a href="#" class="dropdown-toggle" data-toggle="dropdown">Account<b class="caret"></b></a>
              <ul class="dropdown-menu">
                <li><%= link_to 'Log in', new_user_session_path %></li>
                <li class="divider"></li>
                <li><%= link_to 'Sign up', new_user_registration_path %></li>
              </ul>
            </li>
          </ul>
        <% end %>
      </div>
    </div>
  </div>
  <% if current_page?(channels_path) %>
    <div>
  <% else %>
    <div class="container">
  <% end %>
      <%= flash_messages %>
      <%= yield %>
    </div>

</body>
</html>
