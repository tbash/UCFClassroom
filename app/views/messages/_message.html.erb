<%= div_for(message) do %>
  <li class="left clearfix"class="<%= message.user.id == current_user.id ? 'right clearfix' : 'left clearfix' %>">
      <div class="chat-body clearfix">
          <div class="header">
              <strong class="primary-font"><%= message.user.email[/[^@]+/] %></strong>
          </div>
          <p>
            <%= message.content %>
          </p>
      </div>
  </li>
<% end %>

