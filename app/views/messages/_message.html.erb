<%= div_for(message) do %>
  <li>
    <% unless message.user.student? %>
      <strong class="primary-font" data-user-id="<%= message.user.id %>">
         <font color="red"><%= message.user.email[/[^@]+/] %></font>
      </strong>
    <% else %>
      <strong class="primary-font" data-user-id="<%= message.user.id %>">
        <%= message.user.email[/[^@]+/] %>
      </strong>
    <% end %>
    <p>
      <%= message.content %>
    </p>
  </li>
<% end %>
