<%= simple_form_for [@classroom, Message.new]  do |f| %>
  <div class="panel-footer">
    <div class="input-group">
      <%= f.search_field :content, label: false, class: 'form-control', type: 'text', placeholder:'uMessage' %>
      <span class="input-group-btn">
        <%= f.submit "send", class: 'btn btn-warning', type: 'button' %>
      </span>
    </div>
  </div>
<% end %>
