<div class="demo-card-wide mdl-card mdl-shadow--2dp">
  <div class="mdl-card__title">
    <h2 class="mdl-card__title-text">enter your login info</h2>
  </div>
  <div class="mdl-card__supporting-text">
    <form action="#">
      <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label">
        {{input value=name class='mdl-textfield__input' type='text' id='name'}}
        <label class="mdl-textfield__label" for="name">username</label>
      </div>
      <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label">
        {{input value=password class='mdl-textfield__input' type='password' id='password'}}
        <label class="mdl-textfield__label" for="password">password</label>
      </div>
    </form>
  </div>
  <div class="mdl-card__actions mdl-card--border">
    <a class="mdl-button mdl-button--raised mdl-js-button mdl-js-ripple-effect" {{action 'authenticate'}}>
     login 
    </a>
  </div>
</div>
