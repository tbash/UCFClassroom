<div class="mdl-layout mdl-js-layout mdl-layout--fixed-header">
  <header class="mdl-layout__header">
    <div class="mdl-layout__header-row">
      <span class="ucf-title mdl-layout-title">
        <img class="logo-image" src="images/logo.png"> UCF Classroom
      </span>
      <div class="mdl-layout-spacer"></div>
      <button id="more-button" class="mdl-button mdl-js-button mdl-button--icon mdl-js-ripple-effect">
        <i class="material-icons">more_vert</i>
      </button>
      <ul class="mdl-menu mdl-js-menu mdl-menu--bottom-right mdl-js-ripple-effect" for="more-button">
        {{#if session.isAuthenticated}}
           <li class="mdl-menu__item" {{action 'invalidateSession'}}>logout</li>
        {{else}}
           <li class="mdl-menu__item" {{action 'transitionTo' 'login'}}>login</li>
           <li class="mdl-menu__item" {{action 'transitionTo' 'signup'}}>signup</li>
        {{/if}}
      </ul>
    </div>
    <div class="c-notification__container">
    {{#each notifications as |notification|}}
      {{notification-message notification=notification}}
    {{/each}}
    </div>
  </header>
  <main class="mdl-layout__content">
    <div class="page-content">
      {{outlet}}
    </div>
  </main>
</div>
